source 'https://github.com/CocoaPods/Specs.git'

project 'AeroGearSyncDemo.xcodeproj'
platform :ios, '8.0'
use_frameworks!

target 'AeroGearSyncDemo' do
	pod 'AeroGearSyncClientJsonPatch', :git => 'https://github.com/aerogear/aerogear-ios-sync-client'
	pod 'AeroGearSyncJsonPatch', :git => 'https://github.com/aerogear/aerogear-ios-sync'
	target 'AeroGearSyncDemoTests' do
		pod 'AeroGearSyncClientJsonPatch', :git => 'https://github.com/aerogear/aerogear-ios-sync-client'
		pod 'AeroGearSyncJsonPatch', :git => 'https://github.com/aerogear/aerogear-ios-sync'
	end
end
