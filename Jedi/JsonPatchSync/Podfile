source 'https://github.com/CocoaPods/Specs.git'

xcodeproj 'AeroGearSyncDemo.xcodeproj'
platform :ios, '8.0'
use_frameworks!

pod 'AeroGearSyncClient', :git => 'https://github.com/aerogear/aerogear-ios-sync-client'
pod 'AeroGearSync/JSONPatch', :git => 'https://github.com/aerogear/aerogear-ios-sync'

target 'AeroGearSyncDemoTests' do
	pod 'AeroGearSyncClient', :git => 'https://github.com/aerogear/aerogear-ios-sync-client'
	pod 'AeroGearSync/JSONPatch', :git => 'https://github.com/aerogear/aerogear-ios-sync'
end
